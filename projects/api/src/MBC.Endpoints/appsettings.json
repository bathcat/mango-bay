{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "Provider": "SqlServer",
    "SqliteConnectionString": "Data Source=mangobay-dev.db",
    "SetupConnectionString": "Server=.;Database=MangoBayCargo;Integrated Security=true;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "xRuntimeConnectionString": "Server=.;Database=MangoBayCargo;User ID=MBC_Production;Password=StrongPassword123!;MultipleActiveResultSets=true;TrustServerCertificate=True",
    "RuntimeConnectionString": "Server=.;Database=MangoBayCargo;Integrated Security=true;MultipleActiveResultSets=true;TrustServerCertificate=True"
  },
  "Jwt": {
    "Secret": "mango-bay-cargo-dev-secret-key-minimum-32-characters-required",
    "Issuer": "https://localhost",
    "Audience": "https://localhost",
    "AccessTokenExpirationMinutes": 3,
    "RefreshTokenExpirationDays": 30
  },
  "Frontend": {
    "BaseUrl": "http://localhost:4200"
  },
  "ImageStorage": {
    "MaxFileSizeBytes": 1048576,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".webp"],
    "AllowedMimeTypes": ["image/jpeg", "image/png", "image/webp"],
    "UploadDirectory": "./assets/uploads"
  },
  "CostCalculation": {
    "BaseRate": 50.0,
    "DistanceRatePerUnit": 2.0,
    "WeightRatePerKg": 5.0,
    "RushFee": 25.0,
    "RushThresholdDays": 5
  }
}
