{
	"name": "C# (.NET) and MS SQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"customizations": {
		"vscode": {
			"settings": { 
				"mssql.connections": [
					{
						"server": "localhost,1433",
						"database": "",
						"authenticationType": "SqlLogin",
						"user": "sa",
						"password": "P@ssw0rd",
						"emptyPasswordInput": false,
						"savePassword": false,
						"profileName": "mssql-container"
					}
				],
				"terminal.integrated.profiles.linux": {
					"PowerShell": {
						"path": "pwsh",
						"args": ["-NoLogo"]
					}
				},
				"terminal.integrated.defaultProfile.linux": "PowerShell"
			},
			"extensions": [
				"ms-dotnettools.csharp",
				"ms-mssql.mssql"
			]
		}
	},
	"forwardPorts": [5110, 4200, 1433],
	"portsAttributes": {
		"5110": {
			"label": "API",
			"onAutoForward": "notify",
			"visibility": "public"
		},
		"4200": {
			"label": "Web",
			"onAutoForward": "openBrowser",
			"visibility": "public"
		},
		"1433": {
			"label": "SQL Server",
			"onAutoForward": "silent",
			"visibility": "private"
		}
	},
	"postCreateCommand": "bash .devcontainer/mssql/postCreateCommand.sh 'P@ssw0rd' './bin/Debug/' './.devcontainer/mssql/' && npm install --prefix ./projects/web",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/powershell:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/node-asdf:0": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/npm-package:1": {
			"package": "typescript",
			"version": "latest"
		}
	},
	"remoteUser": "root"
}

