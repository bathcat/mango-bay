{
	"name": "C# (.NET) and SQLite",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": { 
				"terminal.integrated.profiles.linux": {
					"PowerShell": {
						"path": "pwsh",
						"args": ["-NoLogo"]
					}
				},
				"terminal.integrated.defaultProfile.linux": "PowerShell"
			},
			"extensions": [
				"ms-dotnettools.csharp"
			]
		}
	},
	"forwardPorts": [5110, 4200],
	"portsAttributes": {
		"5110": {
			"label": "API",
			"onAutoForward": "notify",
			"visibility": "public"
		},
		"4200": {
			"label": "Web",
			"onAutoForward": "openBrowser",
			"visibility": "public"
		}
	},
	"postCreateCommand": "npm install --prefix ./projects/web",
	"features": {
		"ghcr.io/devcontainers/features/dotnet:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/powershell:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/node-asdf:0": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-extra/features/npm-package:1": {
			"package": "typescript",
			"version": "latest"
		}
	},
	"remoteUser": "root"
}
